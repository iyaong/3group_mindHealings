@font-face {
  font-family:'mk';
  src: url('/fonts/memomentKkukkkuk.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

* {
    margin: 0;
    padding: 0;
}

#navWrap {
    width: 100%; 
    display: flex; 
    justify-content: center; 
    align-items: center;
    
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: inherit;
}

#navWrap.main-page {
    margin-bottom: -60px;
}

nav {
    height: 60px;
    width: 100%;
   
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 12;
    padding: 0px 60px;
    box-sizing: border-box;
    background-color: white;
}

h1 p {font-family:"mk" !important}

nav.main {
    background-color: transparent;
}

nav:not(.main) {
    background-color: #ffffff;
}

.nav-left {
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 13;
    flex: 0 0 auto;
    min-width: 100px;
}

.nav-right {
    display: flex;
    align-items: center;
    gap: 0.2rem;
    justify-content: flex-end;
    min-width: 130px;
    max-width: 300px;
    flex-shrink: 0;
    position: relative;
    
}

.nav-center {
    width: 40vw;
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: space-between;
    min-width: 0;
    flex-shrink: 1;
    gap: 15px;
}


.profile {
    position: absolute;
    right: 70%;
    color: #a26cff;
    cursor: pointer;
    font-weight: 600;
    padding: 6px 10px;
    border-radius: 8px;
    text-align: end;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 150px;
}


.nav-left .hamburger {
    display: none;
    font-size: 24px;
    cursor: pointer;
}

/* 중간 크기: nav-center 간격과 크기 축소 */
@media (max-width: 1200px) {
    .nav-center {
        gap: 10px;
        width: auto;
        flex-shrink: 2;
    }
    
    .link-button > span {
        padding: 6px 10px;
        font-size: 14px;
    }
}

@media (max-width: 1024px) {
    .nav-center {
        gap: 8px;
    }
    
    .link-button > span {
        padding: 6px 8px;
        font-size: 14px;
    }
    
    .profile {
        max-width: 100px;
        font-size: 14px;
    }
}

/* 모바일: 햄버거 메뉴 전환 */
@media (max-width: 900px) {
    .nav-left .hamburger {
        display: block;
    }
    
    .nav-center {
        display: none;
    }
    
    .nav-right {
        display: none;
    }
}

@media (max-width: 768px) {
    nav {
        padding: 0 20px;
    }
    
    .main {
        padding: 0 20px;
    }
    
    .m-login-btn {background: none; border: none;}
    .m-logout-btn {background: none; border: none;}
    .m-register-btn {background: none; border: none;}
}


.link-button {
    display: flex;
    align-items: center;
    position: relative;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    box-sizing: border-box;
    white-space: nowrap;
    height: 100%;
    padding: 0 8px;
}

/* 호버 시 작은 영역에만 배경 */
.link-button > span {
    padding: 6px 12px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
    white-space: nowrap;
}

.link-button:hover > span {
    background-color: #f3f4f6;
}






.logout-btn { 
    display: flex;
    align-items: center;
    background: none;
    border: none; 
    cursor: pointer; 
    width: 100px;
    padding: 6px 10px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
}

.logout-btn:hover {
    background-color: #f3f4f6;
}

.login-btn { 
    background: none;
    border: none; 
    cursor: pointer;
    padding: 6px 12px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
}

.login-btn:hover {
    background-color: #f3f4f6;
}

.register-btn {
    background: none;
    border: none; 
    cursor: pointer;
    padding: 6px 12px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
}

.register-btn:hover {
    background-color: #f3f4f6;
}


@media (max-width: 768px) {
    .nav-right {
        display: none;
    }
}

.mobile-menu {
    position: fixed;
    left: 0;
    top: 0;
    background-color: white;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    width: 200px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 30px;
    z-index: 12;
}
.mobile-wrap {
    display: flex; justify-content: space-between; flex-direction: column; height: 90%;
}

.mobile-menu-top {
 display: flex;
 flex-direction: column;
 gap: 20px;   
}

.mobile-menu-bottom {
    height: 200px;
    display: flex;
    flex-direction: column;
    gap: 10px
}

.close-mobile-menu {
    position: fixed;
    left: 0;
    top: 60px;
    width: 100%;
    height: calc(100% - 60px);
    z-index: 11
}